#composite manager to avoid graphical glitches
exec_always compton -CG

for_window [class="^.*"] border pixel 5
gaps inner 10
gaps outer 0
smart_gaps on
smart_borders on

# adjust mocp size
for_window [title="mocInXterm"] move position 200px 200px
for_window [title="mocInXterm"] resize set 1520 680

