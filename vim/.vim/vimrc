" Basic variables:
	set nocompatible
	"enablefiletype
	filetype plugin on
	"enable auto indentation
	filetype plugin indent on
	"enable syntax highlight
	syntax on
	"line numbers
	set number
	set relativenumber
	"display position of the cursor
	set ruler
	"set showcmd
	"incremental search
	set incsearch
	"by default, search ignoring case
	set ignorecase
	"split below and right 
	set splitbelow
	set splitright
	"Use tabs with 4 space width
	set tabstop=4
	set shiftwidth=4
	"Use spaces instead of tabs
	"set expandtab
	"directories for backup,swap and undo files generated by vim
	set undodir=~/.vim/.undo//
	set backupdir=~/.vim/.backup//
	set directory=~/.vim/.swp//

	"Do not autocomment when <CR> is pressed in C
	autocmd FileType * setlocal formatoptions-=c formatoptions-=r formatoptions-=o
	".txt with no line width limit
	autocmd FileType text setlocal textwidth=0
	"for LukeSmithxyz/shortcut-sync
	"Notice that aoutocmd doesn't follow symlinks when symlinks leads to a directory. I don't know why this is important here anymore 
	autocmd BufWritePost ~/.dotfiles/scripts/.scripts/folders,~/.dotfiles/scripts/.scripts/configs !sh ~/.scripts/shortcuts.sh

" Plugins:
	set runtimepath+=~/.vim/bundle/nerdtree
	set runtimepath+=~/.vim/bundle/vim-buftabline
"	set runtimepath+=~/.vim/bundle/vim-buffergator
"	set runtimepath+=~/.vim/bundle/bufexplorer

" Remaps:

"	 imap 'a \'{a}
"	 imap 'i \'{i}
"	 imap 'u \'{u}
"	 imap 'e \'{e}
"	 imap 'o \'{o}
"	 imap 'n \~{n}



	let mapleader = " "
"	map <leader>j :w<CR>:!./make<CR>
"	map <leader>j :w<CR>:!pdflatex %<CR>
	map <leader>ter :!urxvt&<CR><CR>

		nmap <leader>fs :w!<cr>
	"movement
		map <leader>wh <C-w>h
		map <leader>wj <C-w>j
		map <leader>wk <C-w>k
		map <leader>wl <C-w>l

		map <leader>wH <C-w>H
		map <leader>wJ <C-w>J
		map <leader>wK <C-w>K
		map <leader>wL <C-w>L

		map <leader>wy 10<C-w><
		map <leader>wu 5<C-w>-
		map <leader>wi 5<C-w>+
		map <leader>wo 10<C-w>>

"		map <M-h> 10<C-w><
"		map <M-j> 5<C-w>-
"		map <M-i> 5<C-w>+
"		map <M-l> 10<C-w>>

		map <C-h> <C-w>h
		map <C-j> <C-w>j
		map <C-k> <C-w>k
		map <C-l> <C-w>l

		map <leader>ws :split<CR>
		map <leader>wv :vsplit<CR>

		map <leader>q  :quit<CR>
		map <leader>o :only<CR>

		map <leader>ff :edit<C-d> 
		map <leader>fed :edit ~/.vim/vimrc<CR>
		map <leader>n :NERDTreeToggle<CR>
		map <leader>' :terminal<CR>
		
		map <leader>tn tabNext:<CR>
		map <leader>tp tabPrevious:<CR>

		nnoremap <leader>bb :buffers<CR>:buffer<Space>

		command W w !sudo tee % > /dev/null

		"autoformat
		map <F7> mzgg=G`z

		set hidden
		nnoremap <C-N> :bnext<CR>
		nnoremap <C-P> :bprev<CR>


        nmap <leader>1 <Plug>BufTabLine.Go(1)
        nmap <leader>2 <Plug>BufTabLine.Go(2)
        nmap <leader>3 <Plug>BufTabLine.Go(3)
        nmap <leader>4 <Plug>BufTabLine.Go(4)
        nmap <leader>5 <Plug>BufTabLine.Go(5)
        nmap <leader>6 <Plug>BufTabLine.Go(6)
        nmap <leader>7 <Plug>BufTabLine.Go(7)
        nmap <leader>8 <Plug>BufTabLine.Go(8)
        nmap <leader>9 <Plug>BufTabLine.Go(9)
        nmap <leader>0 <Plug>BufTabLine.Go(10)

